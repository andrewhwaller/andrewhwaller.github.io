<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }} flex h-full flex-col bg-zinc-50">

    <div class="relative">
      <main class="mx-auto max-w-7xl p-6 sm:p-12">
        <h1 class="mb-5 text-4xl font-bold tracking-tight text-zinc-900 sm:text-5xl">
          <a href="https://lukanpriorities.com" class="flex items-center gap-2 text-rose-500 hover:text-rose-700">
            Lukan Priorities
          </a>
          {{ data.title }}
        </h1>
        {{ content }}
      </main>
    </div>

  </body>
</html>
