<article class="flex flex-col items-start gap-y-2 justify-between">
  <div class="flex flex-col gap-y-1 prose">
    <a href="{{ url }}" class="underline font-bold hover:text-rose-500">
      {{ repo.name }}
    </a>
    <p>{{ repo.description }}</p>
  </div>
  <div class="flex items-center gap-x-2 text-xs">
    <span>
      Last updated: 
    </span>
    <time>{{ repo.updated_at | date: "%b %d, %Y" }}</time>
    {% for topic in topics %}
      <span>{{ topic }}</span>
    {% endfor %}
  </div>
</article>
